- name: check_old_app_exist
  shell: docker ps |grep ${SERVICE_NAME:-undefined-service}|awk '{print $1}'
  register: appContainerId
  ignore_errors: True
- name: rmove_app_1
  shell: docker kill ${SERVICE_NAME:-undefined-service}
  when: appContainerId != ''
  ignore_errors: True
- name: rmove_app_2
  shell: docker rm  ${SERVICE_NAME:-undefined-service}
  when: appContainerId != ''
  ignore_errors: True
- name: print_var
  shell: echo {{ appContainerId }}
- name: create_app
  shell: 'docker run -d -p ${HTTP_PORT:-9081}:${HTTP_PORT:-9081} --name ${SERVICE_NAME:-undefined-service} johnking123/${SERVICE_NAME:-undefined-service}'
- name: remove_old_images
  shell: docker images|grep none|xargs docker rmi -f
  ignore_errors: True